package core.chain

class NotificationHandle<D>(name : string) {
    def post(data : D) {
        NotificationCenter.default.post(name, data)
    }

    def post(self : NotificationHandle<void>) {
        NotificationCenter.default.post(name, nil)
    }

    def observe(by : D -> void) {
        NotificationCenter.default.addObserver(name, by)
    }
}