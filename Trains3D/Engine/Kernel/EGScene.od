import EGTypes


class EGScene(val controller : EGController, val view : EGView) {
    def drawWith(viewSize : CGSize) {
        view.draw(controller, viewSize)
    }

    def process(event : EGEvent) {
        view.process(controller, event)
    }

    def updateWith(delta : float) {
        controller.updateWith(delta)
    }
}