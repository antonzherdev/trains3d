package com.antonzherdev.eg

class EGScene(val controller : EGController, val layers : [EGLayer]) {
    def drawWith(viewSize : EGVec2) {
        layers.for(_.drawWith(viewSize))
    }

    def process(event : EGEvent) = layers.chain.reverse.fold((r, layer) -> r || layer.process(event), false)

    def updateWith(delta : float) {
        controller.updateWith(delta)
        layers.for(_.updateWith(delta))
    }
}