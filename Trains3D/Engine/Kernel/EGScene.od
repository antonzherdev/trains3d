import EGTypes
import EGProcessor
import EGLayer


class EGScene(val controller : EGController, val layers : [EGLayer]) {
    def drawWith(viewSize : CGSize) {
        layers.for(_.drawWith(viewSize))
    }

    def process(event : EGEvent) = layers.reverse.fold((r, layer) -> r || layer.process(event), false)

    def updateWith(delta : float) {
        controller.updateWith(delta)
    }
}