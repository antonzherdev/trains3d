import EGTypes
import EGProcessor


class EGScene(val controller : EGController, val view : EGView, val processor : EGProcessor) {
    def drawWith(viewSize : CGSize) {
        view.draw(controller, viewSize)
    }

    def process(event : EGEvent) {
        processor.process(event)
    }

    def updateWith(delta : float) {
        controller.updateWith(delta)
    }
}