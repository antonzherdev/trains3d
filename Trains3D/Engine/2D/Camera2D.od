package com.antonzherdev.eg

import core.math._


class Camera2D(size : vec2) extends Camera {
    val viewportRatio : float = size.x/size.y

    val matrixModel : MatrixModel = MatrixModel(
        m = mat4.identity,
        w = mat4.identity,
        c = mat4.identity,
        p = mat4.ortho(0, size.x, 0, size.y, -1, 1)
    )
}
