package com.antonzherdev.actor

trait Future<T> {
    def value : Try<T>?

    def wait(period : float) : Try<T>
}

class Promise<T> extends Future<T> {
    private var _value : Try<T>? = nil
    def value : Try<T>? = _value

    def success(value : T) {
        _value = Success(value)
    }

    def failure(reason : any) {
        _value = Failure<T>(reason)
    }
}

